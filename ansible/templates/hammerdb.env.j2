# HammerDB Environment Configuration
# This file contains environment variables for HammerDB benchmarking

# Oracle Database Connection
export ORACLE_SYSTEM_PASSWORD=Chang4On
export ORACLE_SYS_PASSWORD=Chang4On

# TNS Configuration
export TNS_ADMIN={{ tns_admin_path }}

# Oracle Connection Configuration
export ORACLE_SID={{ default_tns_entry }}

# HammerDB Configuration
export HAMMERDB_HOME={{ benchmark_base_path }}/hammerdb/{{ hammerdb_version }}
export HAMMERDB_VERSION={{ hammerdb_version }}
export HAMMERDB_SCRIPTS={{ scripts_base_path }}/hammerdb

# Benchmark Parameters
export ORA_USER=tpcc
export ORA_PASS=tpcc
export ORA_COUNT_WARE=4
export ORA_NUM_THREADS=4
export ORA_MINUTES_RAMP=2
export ORA_MINUTES_DURATION=5
export PROFILE=small
export DROP_TPCC_SCHEMA_FOR_EACH_BENCHMARK=true

# Results Configuration
export RESULTS_DIR={{ scripts_base_path }}/hammerdb/results
export BENCHNAME=$(date +%Y%m%d_%H%M%S)

# Oracle Client Configuration
export ORACLE_HOME={{ oracle_home_path }}
export LD_LIBRARY_PATH={{ oracle_home_path }}/lib:${LD_LIBRARY_PATH:-}
export PATH={{ oracle_home_path }}/bin:${PATH:-} 