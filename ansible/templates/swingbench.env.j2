# SwingBench Environment Configuration
# This file contains environment variables for SwingBench benchmarking

# Oracle Database Connection  
export ORACLE_SYSTEM_PASSWORD=<oracle system password>
export ORACLE_SYS_PASSWORD=<oracle sys password>

# TNS Configuration
export TNS_ADMIN={{ tns_admin_path }}
export ORACLE_SID={{ default_tns_entry }}        # Standard Oracle variable for TNS connections

# SwingBench Configuration
export SWINGBENCH_HOME={{ swingbench_base_path }}/{{ swingbench_version }}
export SWINGBENCH_SCRIPTS={{ scripts_base_path }}/swingbench

# Database Users
export SOE_USER=soe
export SOE_PASSWORD=<soe user password>
export OE_USER=orderentry
export OE_PASSWORD=<orderentry user password>

# Benchmark Parameters
export SCALE_FACTOR=1
export USER_COUNT=4
export RUN_TIME=1

# Results Configuration
export RESULTS_DIR={{ scripts_base_path }}/swingbench/results
export BENCHMARK_NAME=$(date +%Y%m%d_%H%M%S)

# Oracle Client Configuration
export ORACLE_HOME={{ oracle_home_path }}
export LD_LIBRARY_PATH={{ oracle_home_path }}/lib:${LD_LIBRARY_PATH:-}
export PATH={{ oracle_home_path }}/bin:${PATH:-}

# SwingBench Path
export PATH={{ swingbench_base_path }}/{{ swingbench_version }}/bin:${PATH:-} 